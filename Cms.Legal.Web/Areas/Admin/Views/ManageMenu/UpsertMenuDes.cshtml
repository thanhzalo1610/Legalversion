@model Cms.DataNpg.Legal.EF.MenuDe

@{
    ViewData["Title"] = "UpsertMenuDes";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>UpsertMenuDes</h1>

<h4>MenuDe</h4>
<hr />
<div class="row">
    <div class="col-12">
        <form method="post" asp-action="UpsertMenuDes" id="ajax-submit" data-ajax="true" data-ajax-begin="onBegin" data-ajax-success="onSuccess" data-ajax-failure="onFailed" data-ajax-complete="onComplete">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(m => m.Code)
            <div class="row">
                <div class="col-12 col-sm-6">
                    <div class="form-floating mb-3">
                        @Html.DropDownList("MenuCode", null, "Select Local Menu.", new { @class = "form-select form-select-sm" })
                        <label asp-for="MenuCode" class="control-label"></label>
                        <span asp-validation-for="MenuCode" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-sm-6">
                    <div class="form-floating mb-3">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control form-control-sm" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-sm-6">
                    <div class="form-floating mb-3">
                        <label asp-for="Url" class="control-label"></label>
                        <input asp-for="Url" class="form-control form-control-sm" />
                        <span asp-validation-for="Url" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-sm-6">
                    <div class="form-floating mb-3">
                        @Html.DropDownList("TypeView", null, "Select Local Menu.", new { @class = "form-select form-select-sm" })
                        <label asp-for="TypeView" class="control-label"></label>
                        <span asp-validation-for="TypeView" class="text-danger"></span>
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-12 col-sm-6">
                    <div class="form-floating mb-3">
                        @Html.DropDownList("TypeField",null,"Select Type Field.",new{@class="form-select form-control"})
                        <label asp-for="TypeField" class="control-label"></label>
                        <span asp-validation-for="TypeField" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-sm-6" id="view-value-field">
                    <vc:type-field view_name="icon"></vc:type-field>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <div class="d-md-flex align-items-center mt-3">
                        <div class="ms-auto mt-3 mt-md-0">
                            <button type="submit" class="btn btn-info font-medium rounded-pill px-4">
                                <div class="d-flex align-items-center">
                                    <i class="ti ti-send me-2 fs-4"></i>
                                    Submit
                                </div>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
@section css{
<link rel="stylesheet" href="~/Themes/Admin/dist/libs/sweetalert2/dist/sweetalert2.min.css">
}
@section Scripts {
    <script src="~/lib/jquery-ajax-unobtrusive/dist/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Themes/Admin/dist/libs/sweetalert2/dist/sweetalert2.min.js"></script>
    <script src="~/Themes/Admin/js/app.ajaxform.js"></script>
    <script>
        $.getJSON('/data/icon-json.json', function (icons) {
            var data = icons.map(icon => ({ id: icon, text: icon }));
            var html='<option value="">Select Icon.</option>';
            $.each(icons,function(v,d){
                html+='<option value="'+d+'">'+d+'</option>'
            })
            $('#ValueField').html(html);
        });
    </script>
    <script>
 function onBegin(form) {
                console.log("Begin submit");
            }

            function onSuccess(response, form) {
                Swal.fire({
                    icon: response.status ?? "success",
                    title: response.title ?? "Success",
                    text: response.message ?? "Done"
                });
            }

            function onFailed(xhr, form) {
                Swal.fire({
                    icon: "error",
                    title: "Error",
                    text: xhr.responseText ?? "Request failed"
                });
            }

            function onComplete(form) {
                console.log("Complete request");
            }
    </script>
       
}