@{
    ViewData["Title"] = "ChatLawyer";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var data_user = TempData["data_user"] as Cms.DataNpg.Legal.EF.Chatai??null;
}

<section class="chat-main">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="chat-container">
                    <div class="chat-header">
                        <div class="ai-avatar">
                            <div class="avatar-icon"><img src="/templates/statics/images/icon/iconchatbot.png" /></div>
                            <div class="status-indicator"></div>
                        </div>
                        <div class="ai-info">
                            <h2 class="ai-name">Legal AI Assistant</h2>
                            <p class="ai-status">
                                <span class="status-dot"></span>
                                Active - Available for consultation 24/7
                            </p>
                        </div>
                    </div>

                    <!-- Chat Messages -->
                    <div class="chat-messages" id="chatMessages">
                        <!-- Welcome Message -->
                        <div class="message ai-message">
                            <div class="message-avatar"><img src="/templates/statics/images/icon/iconchatbot.png" /></div>
                            <div class="message-content">
                                <div class="message-bubble">
                                    <p>Hello! I am Legal AI Assistant - your smart legal assistant.</p>
                                    <p>I can help you:</p>
                                    <ul>
                                        <li>Legal advice in the fields: Civil, Criminal, Business, Labor...</li>
                                        <li>Contract analysis and drafting</li>
                                        <li>Look up legal documents</li>
                                        <li>Answering legal questions</li>
                                    </ul>
                                </div>
                                <div class="message-time">now</div>
                            </div>
                        </div>
                    </div>

                    <!-- Typing Indicator -->
                    <div class="typing-indicator" id="typingIndicator" style="display: none;">
                        <div class="message-avatar"><img src="/templates/statics/images/icon/iconchatbot.png" /></div>
                        <div class="typing-dots">
                            <span></span>
                            <span></span>
                            <span></span>
                        </div>
                    </div>

                    <!-- Chat Input -->
                    <div class="chat-input-container">
                        <!-- File Preview -->
                        <div class="file-preview" id="filePreview" style="display: none;">
                            <div class="file-item">
                                <div class="file-icon">📄</div>
                                <div class="file-info">
                                    <div class="file-name" id="fileName"></div>
                                    <div class="file-size" id="fileSize"></div>
                                </div>
                                <button class="btn-remove-file" onclick="removeFile()">×</button>
                            </div>
                        </div>

                        <!-- Voice Recording Indicator -->
                        <div class="voice-recording" id="voiceRecording" style="display: none;">
                            <div class="recording-animation">
                                <div class="recording-pulse"></div>
                                <svg width="24" height="24" fill="currentColor" viewBox="0 0 16 16">
                                    <path d="M3.5 6.5A.5.5 0 0 1 4 7v1a4 4 0 0 0 8 0V7a.5.5 0 0 1 1 0v1a5 5 0 0 1-4.5 4.975V15h3a.5.5 0 0 1 0 1h-7a.5.5 0 0 1 0-1h3v-2.025A5 5 0 0 1 3 8V7a.5.5 0 0 1 .5-.5z" />
                                    <path d="M10 8a2 2 0 1 1-4 0V3a2 2 0 1 1 4 0v5zM8 0a3 3 0 0 0-3 3v5a3 3 0 0 0 6 0V3a3 3 0 0 0-3-3z" />
                                </svg>
                            </div>
                            <div class="recording-text">
                                <span>Đang ghi âm...</span>
                                <span class="recording-time" id="recordingTime">00:00</span>
                            </div>
                            <button class="btn-stop-recording" onclick="stopRecording()">Dừng</button>
                        </div>

                        <!-- Input Area -->
                        <div class="input-wrapper">
                            <input type="file" id="fileInput" style="display: none;" accept=".pdf,.doc,.docx,.txt" onchange="handleFileSelect(event)">

                            <button class="btn-input-action" onclick="document.getElementById('fileInput').click()" title="Đính kèm file">
                                <svg width="22" height="22" fill="currentColor" viewBox="0 0 16 16">
                                    <path d="M4.5 3a2.5 2.5 0 0 1 5 0v9a1.5 1.5 0 0 1-3 0V5a.5.5 0 0 1 1 0v7a.5.5 0 0 0 1 0V3a1.5 1.5 0 1 0-3 0v9a2.5 2.5 0 0 0 5 0V5a.5.5 0 0 1 1 0v7a3.5 3.5 0 1 1-7 0V3z" />
                                </svg>
                            </button>

                            <div class="input-field-wrapper">
                                <textarea class="chat-input"
                                          id="messageInput"
                                          placeholder="Enter your question..."
                                          rows="1"
                                          onkeydown="handleKeyPress(event)"
                                          oninput="autoResize(this)"></textarea>
                            </div>

                            <button class="btn-input-action btn-voice" data-log="" data-c="@data_user.Code" id="voiceBtn" onclick="toggleVoiceRecording()" title="Voice recording">
                                <svg width="22" height="22" fill="currentColor" viewBox="0 0 16 16">
                                    <path d="M3.5 6.5A.5.5 0 0 1 4 7v1a4 4 0 0 0 8 0V7a.5.5 0 0 1 1 0v1a5 5 0 0 1-4.5 4.975V15h3a.5.5 0 0 1 0 1h-7a.5.5 0 0 1 0-1h3v-2.025A5 5 0 0 1 3 8V7a.5.5 0 0 1 .5-.5z" />
                                    <path d="M10 8a2 2 0 1 1-4 0V3a2 2 0 1 1 4 0v5zM8 0a3 3 0 0 0-3 3v5a3 3 0 0 0 6 0V3a3 3 0 0 0-3-3z" />
                                </svg>
                            </button>

                            <button class="btn-send" id="sendBtn" data-log="" data-c="@data_user.Code" onclick="sendMessage(this)" title="Send Message">
                                <svg width="22" height="22" fill="currentColor" viewBox="0 0 16 16">
                                    <path d="M15.854.146a.5.5 0 0 1 .11.54l-5.819 14.547a.75.75 0 0 1-1.329.124l-3.178-4.995L.643 7.184a.75.75 0 0 1 .124-1.33L15.314.037a.5.5 0 0 1 .54.11ZM6.636 10.07l2.761 4.338L14.13 2.576 6.636 10.07Zm6.787-8.201L1.591 6.602l4.339 2.76 7.494-7.493Z" />
                                </svg>
                            </button>
                        </div>

                        <!-- Quick Actions -->
                        <div class="quick-actions">
                            <button class="quick-action-btn" data-log="" data-c="@data_user.Code" onclick="quickQuestion('Labor contract consulting',this)">
                                💼 Labor contract consulting
                            </button>
                            <button class="quick-action-btn" data-log="" data-c="@data_user.Code" onclick="quickQuestion('Advice on divorce and property division',this)">
                                👨‍👩‍👧 Divorce
                            </button>
                            <button class="quick-action-btn" data-log="" data-c="@data_user.Code" onclick="quickQuestion('Consulting on business establishment',this)">
                                🏢 Establishing a Business
                            </button>
                            <button class="quick-action-btn" data-log="" data-c="@data_user.Code" onclick="quickQuestion('Real estate consulting',this)">
                                🏠 Real estate
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section css {
    <link href="~/templates/statics/css/chat.css" rel="stylesheet" />
}
@section scripts {
    <script src="~/templates/statics/js/mammoth.browser.min.js"></script>
    <script src="~/templates/statics/js/pdf.min.js"></script>
    <script src="~/templates/statics/js/pdf.worker.min.js"></script>
    <script src="~/templates/statics/js/chat.js"></script>
}