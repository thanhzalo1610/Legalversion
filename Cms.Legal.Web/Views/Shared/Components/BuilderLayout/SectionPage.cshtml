                            {
                                <form method="post" asp-action="/logout">
                                <li><input type="submit" class="dropdown-item" value="Logout"></li>
                                </form>
                                
                            }else
                            {
                                <li><a class="dropdown-item" href="/login">Login</a></li>
                            }
