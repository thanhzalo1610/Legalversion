
@{
    ViewData["Title"] = "court";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="stage-indicator">
    <div class="stage-bar">
        <div class="stage-item active" data-stage="1">
            <div class="stage-number">1</div>
            <span class="stage-label">Session Start</span>
        </div>
        <div class="stage-connector"></div>
        <div class="stage-item" data-stage="2">
            <div class="stage-number">2</div>
            <span class="stage-label">Presentation</span>
        </div>
        <div class="stage-connector"></div>
        <div class="stage-item" data-stage="3">
            <div class="stage-number">3</div>
            <span class="stage-label">Cross-Examination</span>
        </div>
        <div class="stage-connector"></div>
        <div class="stage-item" data-stage="4">
            <div class="stage-number">4</div>
            <span class="stage-label">Deliberation</span>
        </div>
        <div class="stage-connector"></div>
        <div class="stage-item" data-stage="5">
            <div class="stage-number">5</div>
            <span class="stage-label">Verdict</span>
        </div>
    </div>
    <div class="stage-controls">
        <button class="btn-stage" id="prevStage" disabled>
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M19 12H5M12 19l-7-7 7-7" />
            </svg>
            Previous Stage
        </button>
        <button class="btn-stage btn-primary" id="nextStage">
            Next Stage
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14M12 5l7 7-7 7" />
            </svg>
        </button>
    </div>
</div>

<div class="courtroom-tabs">
    <button class="tab-btn active" data-tab="participants">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" />
            <circle cx="9" cy="7" r="4" />
            <path d="M23 21v-2a4 4 0 0 0-3-3.87" />
            <path d="M16 3.13a4 4 0 0 1 0 7.75" />
        </svg>
        Participants
    </button>
    <button class="tab-btn" data-tab="documents">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" />
            <polyline points="14 2 14 8 20 8" />
        </svg>
        Documents
    </button>
    <button class="tab-btn" data-tab="analysis">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="11" cy="11" r="8" />
            <path d="M21 21l-4.35-4.35" />
        </svg>
        Case Analysis
    </button>
    <button class="tab-btn" data-tab="verdict">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10" />
            <polyline points="12 6 12 12 16 14" />
        </svg>
        Verdict
    </button>
</div>

<div class="courtroom-content">
    <div class="tab-panel active" id="participants-panel">
        <div class="panel-header">
            <div>
                <h2>Participants Management</h2>
                <p>Manage participants in the virtual courtroom session</p>
            </div>
            <button class="btn-gold" id="addParticipantBtn">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="12" y1="5" x2="12" y2="19" />
                    <line x1="5" y1="12" x2="19" y2="12" />
                </svg>
                Add Participant
            </button>
        </div>

        <div class="participants-table-wrapper">
            <table class="participants-table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Role</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
